block css
    link(rel="stylesheet", href="/stylesheets/articles_style.css")

block content
    div.articles_body
        div.article_content
            h1.article_page_title Articles

            a.article_element(href="/")
                div.article
                    div.article_thumbnail
                        div(style="position:relative") 
                            div.image_layer1
                                div.image_layer2
                                    div.image_layer3
                                        div.image_layer4
                                        picture.thumbnail_frame
                                            source(media="(min-width: 800px)", srcset="https://theintercept-static.imgix.net/usq/b4574b08-52e4-405f-922f-26c2d57cd9de/b4574b08-52e4-405f-922f-26c2d57cd9de.jpeg?auto=compress,format&cs=srgb&dpr=2&h=440&w=880&fit=crop&crop=faces%2Cedges&_=27346e40f47bf6707676393a447ae831", style="box-sizing: border-box;")
